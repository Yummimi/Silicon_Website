            </div>

        </div>

    </div>

</section>

<section id="subscribe-section">

    <div class="container">

        <form method="post" asp-action="Subscribe" asp-controller="Default" novalidate>

            <div class="title">
                <h1>Don't Want to Miss Anything?</h1><img src="~/images/Group.svg">
            </div>

            <div class="content-top">

                <h5>Sign up for <br> Newsletters</h5>

                <div class="input-group">

                    <div id="newsletter">
                        <input type="checkbox" id="newsletter" asp-for="DailyNewsLetter" />
                        <label asp-for="DailyNewsLetter">Daily Newsletter</label>
                    </div>

                    <div id="event">
                        <input type="checkbox" id="event" asp-for="EventUpdates" />
                        <label asp-for="EventUpdates">Event Updates</label>
                    </div>

                    <div id="advertising">
                        <input type="checkbox" id="advertising" asp-for="AdvertisingUpdates" />
                        <label asp-for="AdvertisingUpdates">Advertising Updates</label>
                    </div>

                    <div id="weekly">
                        <input type="checkbox" id="weekly" asp-for="StartupWeekly" />
                        <label asp-for="StartupWeekly">Startups Weekly</label>
                    </div>

                    <div id="week-review">
                        <input type="checkbox" id="week-review" asp-for="WeekinReview" />
                        <label asp-for="WeekinReview">Week in Review</label>
                    </div>

                    <div id="podcasts">
                        <input type="checkbox" id="podcasts" asp-for="Podcasts" />
                        <label asp-for="Podcasts">Podcasts</label>
                    </div>

                </div>

            </div>

            <span class="message">@TempData["StatusMessage"]</span>

            <div class="content-bot">
                <input asp-for="Email" placeholder="Your Email" id="subscribe" />
                <i class="fa-regular fa-envelope"></i>
                <button type="submit" class="menu-link btn-theme-s">Subscribe *</button>
            </div>

            <p class="text-s"><span>* </span>Yes, I agree to the <a href="terms-and-conditions">terms</a> and <a href="terms-and-conditions">privacy policy.</a></p>

        </form>

    </div>

</section>

