<section id="light-and-dark">

    <div class="background">

        <div class="content">

            <h1><span class="white">Switch Between</span><span class="black">Light & Dark Mode</span></h1>

            <img src="~/images/MacBook Pro-dark.svg" alt="macbook">

        </div>

    </div>

</section>

<section id="manage-your-work">

    <div class="container">

        <img src="~/images/image-manage-work.svg" alt="dashboard and tasks">

        <div class="manage-work">

            <h2>Manage Your Work</h2>

            <ul class="list">

                <li>
                    <i class="fa-regular fa-circle-check"></i>
                    <p class="text-m">Powerful project management</p>
                </li>

                <li>
                    <i class="fa-regular fa-circle-check"></i>
                    <p class="text-m">Powerful project management</p>
                </li>

                <li>
                    <i class="fa-regular fa-circle-check"></i>
                    <p class="text-m">Transparent work management</p>
                </li>

                <li>
                    <i class="fa-regular fa-circle-check"></i>
                    <p class="text-m">Manage work & focus on the most important tasks</p>
                </li>

