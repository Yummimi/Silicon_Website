@model SubscribeViewModel
@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<header>
    <div class="container">
        <a asp-controller="Default" asp-action="Home"><img src="~/images/Silicon Logotype - Light Mode.svg" id="logo" alt="logo"></a>
        <div id="menu">
            <nav>
                @if (User.Identity!.IsAuthenticated)
                {
                    <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="showcase">Overview</a>
                    <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="tools-section">Features</a>
                    <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="contact">Contact</a>
                    <a class="menu-link" asp-controller="Courses" asp-action="Index" asp-fragment="courses">Courses</a>
                }
                else
                {
                    <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="showcase">Overview</a>
                    <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="tools-section">Features</a>
                    <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="contact">Contact</a>
                }
            </nav>
        </div>

        <div class="btn-switch">
            <label>Light</label>
            <div class="switch round">
                <input type="checkbox" id="toggle">
                <label class="slider round" for="toggle"></label>
            </div>
            <label>Dark</label>
        </div>

        <div class="account-buttons">

            @if (User.Identity!.IsAuthenticated)
            {
                <a class="menu-link btn-gray" asp-controller="Account" asp-action="Details"><i class="fa-solid fa-arrow-down-to-square fa-rotate-270"></i>Account details</a>
                <a class="menu-link btn-theme" asp-controller="Auth" asp-action="SignOut"><i class="fa-regular fa-user"></i>Sign out</a>
            }
            else
            {
                <a class="menu-link btn-gray" asp-controller="Auth" asp-action="SignIn"><i class="fa-solid fa-arrow-down-to-square fa-rotate-270"></i>Sign in</a>
                <a class="menu-link btn-theme" asp-controller="Auth" asp-action="SignUp"><i class="fa-regular fa-user"></i>Sign up</a>
            }

        </div>

    </div>

</header>

<section id="showcase">

    <div class="container custom-container">
        <div class="box1">
            <div class="title d4">Task Management Assistant You Gonna Love</div>
            <p class="text-lg">We offer you a new generation of task management system. Plan, manage & track all your tasks in one flexible tool.</p>
            <a class="menu-link btn-theme-s" asp-controller="Auth" asp-action="SignIn">Get started for free</a>

            <h6>Largest companies use our tool to work efficiently</h6>
            <img src="~/images/showcase-logos.svg" />
        </div>

        <div class="box2">
            <img class="img" src="~/images/image-section1.svg">
        </div>
    </div>

</section>

