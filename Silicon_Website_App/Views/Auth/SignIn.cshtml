@model SignInViewModel


@{
    ViewData["Title"] = Model.Title;
}

@section Styles {
    <link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />
}

<body class="wrapper">

    <header>
        <div class="container">
            <a a asp-controller="Default" asp-action="Home"><img src="~/images/Silicon Logotype - Light Mode.svg" id="logo" alt="logo"></a>
            <div id="menu">
                <nav>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="showcase">Overview</a>
                        <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="tools-section">Features</a>
                        <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="contact">Contact</a>
                        <a class="menu-link" asp-controller="Courses" asp-action="Index" asp-fragment="courses">Courses</a>
                    }
                    else
                    {
                        <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="showcase">Overview</a>
                        <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="tools-section">Features</a>
                        <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="contact">Contact</a>
                    }
                </nav>
            </div>

            <div class="btn-switch">
                <label>Light</label>
                <div class="switch round">
                    <input type="checkbox" id="toggle">
                    <label class="slider round" for="toggle"></label>
                </div>
                <label>Dark</label>
            </div>

            <div class="account-buttons">

                @if (User.Identity!.IsAuthenticated)
                {
                    <a class="menu-link btn-gray" asp-controller="Account" asp-action="Details"><i class="fa-solid fa-arrow-down-to-square fa-rotate-270"></i>Account details</a>
                    <a class="menu-link btn-theme" asp-controller="Auth" asp-action="SignOut"><i class="fa-regular fa-user"></i>Sign out</a>
                }
                else
                {
                    <a class="menu-link btn-gray" asp-controller="Auth" asp-action="SignIn"><i class="fa-solid fa-arrow-down-to-square fa-rotate-270"></i>Sign in</a>
                    <a class="menu-link btn-theme" asp-controller="Auth" asp-action="SignUp"><i class="fa-regular fa-user"></i>Sign up</a>
                }

            </div>

        </div>

    </header>

    <section id="signin-section">

        <div class="container">

            <form method="post" asp-controller="Auth" asp-action="SignIn" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" novalidate>

                <div class="title">
                    <h1>Welcome Back</h1>
                    <p class="text-m">Don’t have an account yet?<a asp-controller="Auth" asp-action="SignUp"> Sign up here.</a></p>

                </div>

                <div class="form-content">

                    <span>@Model.ErrorMessage</span>
                    <div class="input-group semi-bold">
                        <label asp-for=Email></label>
                        <input asp-for="Email" placeholder="Enter your email address" />
                        <span asp-validation-for="Email"></span>
                    </div>

                    <div class="input-group semi-bold">
                        <label asp-for=Password></label>
                        <input asp-for="Password" placeholder="********" />
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div>
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe">Remember me</label>
                    </div>

                    <button type="submit" class="menu-link btn-theme-s">@Model.Title</button>

                    <div class="link-container">
                        <a href="">Forgot your password?</a>
                    </div>

                </div>

            </form>

        </div>

    </section>

    <footer>

        <div class="container">

            <p class="text-s">&copy; 2024 Silicon. All rights reserved. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin volutpat mollis egestas. Nam luctus facilisis ultrices. Pellentesque volutpat ligula est. Mattis fermentum, at nec lacus.</p>

        </div>

    </footer>

</body>
